RewriteEngine On
RewriteCond %{SERVER_PORT}   !^443$
RewriteRule  (.*)  https://%{HTTP_HOST}/$1   [L]

Header set X-Frame-Options DENY
Header set Feature-Policy "geolocation 'self'"
Header set Referrer-Policy no-referrer
Header set Strict-Transport-Security max-age=31536000
Header set X-Content-Type-Options nosniff
Header set X-XSS-Protection "1; mode=block"
Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'sha256-DpoBpZiqPfTSgCe3TsXOHkvf/Z25WDRWfNz+kaz2g44=' www.google-analytics.com www.googletagmanager.com; img-src 'self' www.google-analytics.com"

Header unset server
Header unset Server